<?xml version="1.0" encoding="utf-8"?>


    <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SonucScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"

            >

            <Spinner
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:popupBackground="@color/appDefault"/>



            <ImageView

                android:paddingTop="10dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/blankprofile"
                android:clickable="true"
                />


            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/name"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText6"/>

            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/enter_password"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText7"/>

            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/confirm_password"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/enter_mobile"
                android:paddingTop="20dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText8"/>

            <Spinner
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/spinner2"
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:popupBackground="@color/appDefault"/>

            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/district"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText1"/>
            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/tehsil"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText2"/>

            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/village"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText3"/>

            <EditText
                android:drawableBottom="@color/appDefault"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/houseno"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText4"/>

            <EditText

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/pincode"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:id="@+id/editText5"/>

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="Submit"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@color/appDefault"
                android:textAlignment="gravity"
                android:gravity="center"
                android:id="@+id/button1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>



